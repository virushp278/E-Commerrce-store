<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("./partials/head") %>
  <title>Merchant Sign-In</title>
</head>
<body>
  <%- include("./partials/nav") %>

  <div class="container min-vh-100 d-flex justify-content-center align-items-center">
    <div class="w-100" style="max-width: 400px;">
      <h3 class="text-center mb-4">Merchant Sign-In</h3>

      <form action="/merchant/merchant-signin" method="POST">
        <div class="mb-3">
          <label for="email" class="form-label">Email Address</label>
          <input type="email" name="email" class="form-control" id="email" required>
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" name="password" class="form-control" id="password" required>
        </div>

        <% if (typeof error !== "undefined") { %>
          <div class="alert alert-danger">
            <%= error %>
          </div>
        <% } %>

        <button type="submit" class="btn btn-primary w-100">Sign In</button>
      </form>

      <div class="mt-4 text-center">
        <p>Don't have a merchant account?</p>
        <a href="/merchant/merchant-signup" class="btn btn-outline-secondary mb-2">Register as Merchant</a>

        <hr>

        <p class="mt-3 text-muted">Looking for a customer account?</p>
        <a href="/user/signin" class="btn btn-sm btn-link">Customer Login</a>
        <span> | </span>
        <a href="/user/signup" class="btn btn-sm btn-link">Create Customer Account</a>
      </div>
    </div>
  </div>

  <%- include("./partials/script") %>
</body>
</html>
