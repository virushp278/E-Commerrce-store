<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <title>My Products | Merchant Dashboard</title>
</head>
<body>
    <%- include("./partials/nav") %>

    <div class="container mt-5 pt-5">
        <h2 class="mb-4">üì¶ Your Listed Products</h2>

        <% if (products.length === 0) { %>
            <div class="alert alert-info">You haven't added any products yet.</div>
        <% } else { %>
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                <% products.forEach(product => { %>
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <img src="<%= product.ProductImage %>" class="card-img-top" style="height: 180px; object-fit: contain;">
                            <div class="card-body d-flex flex-column">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <h5 class="card-title mb-0"><%= product.productName %></h5>
                                    <% if (product.status === 'active') { %>
                                        <span class="badge bg-success">Active</span>
                                    <% } else if (product.status === 'out-of-stock') { %>
                                        <span class="badge bg-warning text-dark">Out of Stock</span>
                                    <% } else { %>
                                        <span class="badge bg-secondary">Hidden</span>
                                    <% } %>
                                </div>

                                <p class="mb-1">
                                    <% if (product.price > product.discountPrice) { %>
                                    <strong class="text-success">Buy at‚Çπ<%= product.discountPrice %></strong>
                                    <span class="text-muted text-decoration-line-through ms-2">‚Çπ<%= product.price %></span>
                                    
                                    <% } else { %>
                                     
                                    <strong class="text-success">Buy at‚Çπ<%= product.price %></strong>
                                        <% } %>
                                </p>

                                <p class="text-muted small mb-1">üõí Orders: <%= product.orders || 0 %></p>
                                <p class="text-muted small mb-2">üì¶ Stock: <%= product.stock || 0 %></p>
                                <p class="text-muted small mb-3">üóìÔ∏è <%= product.createdAt.toDateString() %></p>

                                <div class="mt-auto d-flex gap-2">
                                    <a href="/product/<%= product._id %>" class="btn btn-outline-primary btn-sm w-100">View</a>
                                    <a href="/product/<%= product._id %>/edit" class="btn btn-outline-warning btn-sm w-100">Edit</a>
                                    <form action="/product/<%= product._id %>/delete" method="POST" onsubmit="return confirm('Delete this product?')" class="w-100">
                                        <button type="submit" class="btn btn-outline-danger btn-sm w-100">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>

    <%- include("./partials/script") %>
</body>
</html>
